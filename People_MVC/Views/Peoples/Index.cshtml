@model People_MVC.Models.ViewModel.PeopleViewModel;
@{
    ViewData["Title"] = "People Index";
}

<h1>Welcome to People's table</h1>

<form method="post">
    <label >Please input something to search</label>
    <input id="searchsth"/>
    <button type="submit" asp-controller="Peoples" asp-action="SearchSth"> Search</button>
</form>

<form>
    <label><a asp-action="Create">Create a new person's record!</a> </label>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">PersonId</th>
            <th scope="col">Name</th>
            <th scope="col">TeleNumber</th>
            <th scope="col">City</th>
            <th scope="col">Country</th>
            <th scope="col">PersonLanguages</th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody id="tbody">

        @foreach (var asset in ViewBag.data)
        {
        <tr>
            <td>@asset.PId</td>    
            <td>@asset.PName</td>
            <td>@asset.Phone</td>
            <td>@asset.CityName</td>
            <td>@asset.CountryName</td>
            <td>@asset.PLanguages</td>
    
            <td>
                <a class="btn btn-primary" onclick="Update('@asset.PId')">Edit</a>
                 <a class="btn btn-primary" onclick="Delete('@asset.PId')">Delete</a>
             </td>
         </tr>}
    </tbody>

</table>